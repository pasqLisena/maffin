{
    "manifest_version": 2,
    "name": "Media Fragments",
    "version": "0.3",
    "description": "Implements time range as specified in W3C Protocol for Media Fragments 1.0 Resolution in HTTP",
    "icons": {
        "128": "img/icon_128.png"
    },
    "permissions": [
        "webRequest", "webRequestBlocking",
        "*://*/*.aac",
        "*://*/*.mp4",
        "*://*/*.m4a",
        "*://*/*.m4v",
        "*://*/*.mp1",
        "*://*/*.mp2",
        "*://*/*.mp3",
        "*://*/*.mpg",
        "*://*/*.mpeg",
        "*://*/*.oga",
        "*://*/*.ogv",
        "*://*/*.ogg",
        "*://*/*.wav",
        "*://*/*.webm"
    ],
    "page_action": {
        "default_icon": {
            "38": "img/icon_38.png",
            "19": "img/icon_19.png"
        },
        "default_title": "In this page there is a Media Fragment"
    },

    "background": {
        "scripts": [
            "js/mediafragment.js",
            "js/content_script.js"
        ]
    }


}
